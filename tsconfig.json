{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": false,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "inlineSources": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "noEmit": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "*.md",
    "src/Resources",
    ".github",
    ".changeset"
  ]
}
