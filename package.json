{
  "name": "create-videos",
  "version": "4.0.0",
  "description": "Video processing script",
  "license": "MIT",
  "private": false,
  "author": {
    "name": "Craig Beswetherick",
    "email": "craigbeswetherick@gmail.com"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "process-videos": "node src/index.js",
    "lint": "eslint -f unix \"src/**/*.{ts,tsx}\" && tsc",
    "update": "pnpm lint && pnpm changeset version && pnpm changeset",
    "ci": "pnpm run build && changeset publish",
    "build": "pnpm lint && tsup src/index.ts --format cjs,esm --dts",
    "docs": "typedoc --out dist/docs --entryPoints src/index.ts --exclude '**/node_modules/**' && http-server dist/docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Grindhead/create-videos.git"
  },
  "keywords": [
    "video",
    "processing"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=21.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "chalk": "^5.3.0",
    "eslint": "^8.54.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^7.3.0",
    "typedoc": "^0.25.3",
    "typescript": "^5.3.2"
  }
}
