{
  "name": "midgar-video",
  "version": "1.0.0",
  "description": "Video processing script",
  "main": "src/index.js",
  "scripts": {
    "process-videos": "node src/index.js",
    "update": "pnpm lint && pnpm changeset version && pnpm changeset",
    "ci": "pnpm run build && changeset publish",
    "build": "pnpm lint && tsup src/index.ts --format cjs,esm --dts",
    "docs": "typedoc --out dist/docs --entryPoints src/**/*.ts --exclude '**/node_modules/**'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Grindhead/create-videos"
  },
  "keywords": [
    "video",
    "processing"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=21.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "tsup": "^7.3.0",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2"
  }
}
